@{string[] tabs = { "Adopt", "Shelters", "Community", "Donate", "Events", "Fundraising",  };}
@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.Owin

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PETNET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", false)
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/WebShell.css" rel="stylesheet" />


</head>
<body>
    <div class="grid-container">

        <!------------>
        <!-- HEADER -->
        <!------------>
        <div class="row-1">

            <div class="col-1"></div>

            <!-- petnet logo -->
            <div class="col-2" style="width: 8.5%;">
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/Images/petnetLogo_hover.png" height="75" onmouseover="logoHover(this, true)" onmouseout="logoHover(this, false)" />
                </a>
            </div>

            <div class="col-3" style="width: 7%;"></div>
            <div class="col-4" style="width: 7%;"></div>
            <div class="col-5" style="width: 7%;"></div>
            <div class="col-6" style="width: 7%;"></div>
            <div class="col-7" style="width: 7%;"></div>
            <div class="col-8" style="width: 7%;"></div>
            <div class="col-9" style="width: 7%;"></div>
            <div class="col-10" style="width: 7%;"></div>
            <div class="col-11" style="width: 7%;"></div>
            <div class="col-12" style="width: 7%;"></div>

            <!-- petnet notif -->
            <div class="col-13" style="width: 55px;">
                @if (Request.IsAuthenticated)
                {
                    // no link because no notif screen exists
                    <a href="#">
                        <img src="~/Images/bell_notification.png" height="50" onmouseover="bellHover(this, true)" onmouseout="bellHover(this, false)" />
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")">
                        <img src="~/Images/bell_notification.png" height="50" onmouseover="bellHover(this, true)" onmouseout="bellHover(this, false)" />
                    </a>
                }
            </div>



            <!-- petnet profile -->
            <div class="col-14" style="width: 55px;">
                @if (Request.IsAuthenticated)
                {
                    <a href="@Url.Action("Index", "UserProfile")">
                        <img src="~/Images/abstract-user-flat-4.png" height="50" onmouseover="profileHover(this, true)" onmouseout="profileHover(this, false)" />
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")">
                        <img src="~/Images/abstract-user-flat-4.png" height="50" onmouseover="profileHover(this, true)" onmouseout="profileHover(this, false)" />
                    </a>
                }
            </div>

            <!-- petnet menu -->
            <div class="col-15" style="width: 55px;">
                <div class="dropdown">
                    <a class="dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
                        <img src="~/Images/menuIcon.png" height="50" class="dropbtn" onmouseover="menuHover(this, true)" onmouseout="menuHover(this, false)" />
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <li class="dropdown-item-text disabled">
                            @if (Request.IsAuthenticated)
                            {
                                ApplicationUserManager userManager = Context.GetOwinContext().GetUserManager<ApplicationUserManager>();
                                var user = userManager.FindById(User.Identity.GetUserId());

                                <p>Hello, @user.GivenName!</p>
                            }
                            else
                            {
                                <p>Hello, Guest!</p>
                            }
                            
                         </li>
                        <li class="dropdown-item" type="button"><a href="~/Views/Manage/AccountSettings.cshtml">Account Settings</a></li>
                        <li class="dropdown-divider"></li>
                        <li class="dropdown-item" type="button">
                            @if (Request.IsAuthenticated)
                            {
                                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { @id = "logoutForm", @class = "my-auto" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                                }
                            }
                            else
                            {
                                <a href="@Url.Action("Login", "Account")">Log In</a>
                            }
                        </li>
                    </ul>
                </div>

            </div>

            <div class="col-16">.</div>

        </div>

        <!-- MENU -->
        <div class="row-2 header-menu">
            <div class="col-1"></div>
            <div class="col-2 animalButton" style="width: 10%"><button class="header-menu-list-item" style="width: 190px;">@Html.ActionLink("Animals", "Adoptable", "Animals", null, new { @class = (ViewBag.Tab == "Adopt" ? "active-main-tab" : "") })</button></div>
            <div class="col-3" style="width: 10%"><button class="header-menu-list-item" style="width: 190px;">@Html.ActionLink("Shelters", "SelectShelter", "Shelters", null, new { @class = (ViewBag.Tab == "Shelters" ? "active-main-tab" : "") })</button></div>
            <div class="col-4 fundraisingButton" style="width: 10%"><button class="header-menu-list-item" style="width: 190px;">@Html.ActionLink("Community", "Index", "Community", null, new { @class = (ViewBag.Tab == "Community" ? "active-main-tab" : "") })</button></div>
            <div class="col-5" style="width: 10%"><button class="header-menu-list-item" style="width: 190px;">@Html.ActionLink("Donate", "Index", "Donate", null, new { @class = (ViewBag.Tab == "Donate" ? "active-main-tab" : "") })</button></div>
            <div class="col-6" style="width: 10%"><button class="header-menu-list-item" style="width: 190px;">@Html.ActionLink("Events", "Index", "Events", null, new { @class = (ViewBag.Tab == "Events" ? "active-main-tab" : "") })</button></div>
            <div class="col-7" style="width: 10%"><button class="header-menu-list-item" style="width: 190px;">@Html.ActionLink("Fundraising", "Index", "Fundraising", null, new { @class = (ViewBag.Tab == "Fundraising" ? "active-main-tab" : "") })</button></div>
            <div class="col-8" style="width: 3.5%"></div>
            <div class="col-9" style="width: 3.5%"></div>
            <div class="col-10" style="width: 3.5%"></div>
            <div class="col-11" style="width: 3.5%"></div>
            <div class="col-12" style="width: 3.5%"></div>
            <div class="col-13" style="width: 3.5%"></div>
            <div class="col-14" style="width: 3.5%"></div>
            <div class="col-15" style="width: 3.5%"></div>
            <div class="col-16">.</div>
        </div>

        <div class="row-3">
            @* To have your sub menu show up the tab name must be in the tabs variable at the top of the page*@
            @if (tabs.Contains((string)ViewBag.Tab))
            {

                @Html.Partial("_PartialSubMenu");
            }
        </div>
    </div>


    <div class="body-content">
        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    @RenderSection("scripts", required: false)

    <footer>
        <div class="footer-images">
        </div>
    </footer>

    <script src="~/Scripts/PetnetBorder.js"></script>
    <script>
        $('.dropdown-toggle').dropdown()

        function logoHover(img, onOff) {
            (onOff) ? img.src = "../Images/petnetLogo.png" : img.src = "../Images/petnetLogo_hover.png";

        }

        function bellHover(img, onOff) {
            (onOff) ? img.src = "../Images/bell_notification_hover.png" : img.src = "../Images/bell_notification.png";
        }

        function profileHover(img, onOff) {
            (onOff) ? img.src = "../Images/user_hover.png" : img.src = "../Images/abstract-user-flat-4.png";
        }

        function menuHover(img, onOff) {
            (onOff) ? img.src = "../Images/menuIcon_hover.png" : img.src = "../Images/menuIcon.png";
        }

    </script>
</body>
</html>
