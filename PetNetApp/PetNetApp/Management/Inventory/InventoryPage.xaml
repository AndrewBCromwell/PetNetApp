<Page x:Class="WpfPresentation.Management.Inventory.InventoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Development.Management"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InventoryPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>

        <Button x:Name="btnViewShelterInventory" Margin="30" Width="200" Height="150" Click="btnViewShelterInventory_Click">
            View Shelter Inventory...
        </Button>
        
        <Button x:Name="btnViewInventoryChanges" Margin="30" Width="200" Height="150" Grid.Column="1"  Click="btnViewInventoryChanges_Click">
            View Inventory Changes...
        </Button>

    </Grid>
</Page>
