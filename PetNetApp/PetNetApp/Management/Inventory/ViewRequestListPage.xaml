<Page x:Class="WpfPresentation.Management.Inventory.ViewRequestListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Management.Inventory"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewRequestListPage" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25" />
            <ColumnDefinition />
            <ColumnDefinition Width="25" />
        </Grid.ColumnDefinitions>
        <Rectangle Fill="#9EC1B0" Grid.Column="0" Grid.RowSpan="2" />
        <Rectangle Fill="#9EC1B0" Grid.Column="2" Grid.RowSpan="2" />
        <Label x:Name="lblViewInventoryChanges" Grid.Row="0" Grid.Column="1" Content="List of Shelter Requests" VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center" FontSize="24"/>
        <ScrollViewer Grid.Row="1" Grid.Column="1">
            <StackPanel x:Name="stpRequestList">

            </StackPanel>
        </ScrollViewer>
        <Frame x:Name="frmSpecificRequest"></Frame>
    </Grid>
</Page>
