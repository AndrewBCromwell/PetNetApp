<Window x:Class="WpfPresentation.PromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPresentation"
        mc:Ignorable="d"
        Title="Prompt" Height="200" Width="300" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#EEF2E6">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="tbPrompt" Text="{Binding PromptText}" HorizontalAlignment="Center" Width="250" MaxHeight="65" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Foreground="#1C6758"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btn1" Width="120" Height="50" Grid.Column="0" Click="btn1_Click"></Button>
            <Button x:Name="btn2" Width="120" Height="50" Grid.Column="1" Click="btn2_Click"></Button>
        </Grid>
    </Grid>
</Window>
