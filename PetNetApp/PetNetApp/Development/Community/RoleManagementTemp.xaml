<Page x:Class="WpfPresentation.Development.Community.RoleManagementTemp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Development.Community"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RoleManagementTemp">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" FontSize="36" x:Name="lbl_Title" Content="Temp page only used to launch role management popup" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" />
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,75,0">
            <Button Grid.Row="2" x:Name="btn_LaunchRoleManagement" Content="Role Mgmt" Style="{StaticResource ResourceKey=rsrcSafeButton}" VerticalAlignment="Center" Margin="10" Width="125" Height="35" Click="btn_LaunchRoleManagement_Click"/>
        </StackPanel>
    </Grid>
</Page>
