<Page x:Class="WpfPresentation.Misc.LandingBodyLoggedInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Misc"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LandingBodyLoggedInPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Body -->
        <Label Grid.Column="1" Content="Logged Out :(" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- Padding -->
        <Rectangle Fill="#FF9EC1B0" Grid.RowSpan="6"/>
        <Rectangle Fill="#FF9EC1B0" Grid.Column="2" Grid.RowSpan="6"/>

    </Grid>
</Page>
